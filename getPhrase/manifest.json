{
    "name": "getPhraseFromAcronym",
    "description": "Extension to provide phrase for common acronyms on PubMed",
    "version": "1.0",
    "permissions": [
	    "activeTab"
    ],
    "browser_action": {
        "default_title": "PubMed Acronym Enhancer"
    },

    "content_scripts": [
      {
        "matches": [ "https://pubmed.ncbi.nlm.nih.gov/*" ],
        "js": [
          "jquery-3.3.1.min.js",
          "getPhrase.js"
        ],
        "css": [ "phraseDialog.css" ]
      }
      ],

    "manifest_version": 2
}
